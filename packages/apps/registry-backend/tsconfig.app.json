{
  "extends": ["@tsconfig/node20/tsconfig.json", "./tsconfig.json"],
  "include": ["src/**/*.ts", "src/*.ts", "src/**/*.json", "./debug.ts"],
  "strictNullChecks": true,
  "allowJs": true,
  "types": ["jest", "node"],
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "strict": true,
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "references": [
    {
      "path": "../../libs/registry-sdk/tsconfig.lib.json"
    },
    {
      "path": "../../libs/contracts-sdk/tsconfig.lib.json"
    },
    {
      "path": "../../libs/app-sdk/tsconfig.lib.json"
    }
  ]
}
